        android:layout_below="@+id/tx1"/>




    <Button
        android:id="@+id/b1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spinner1"
        android:background="@color/black"
        android:text="1"
        android:backgroundTint="@color/black"
        android:textFontWeight="1"/>




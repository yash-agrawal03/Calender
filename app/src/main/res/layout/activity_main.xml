    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Expenses View"
        android:textSize="25dp"
        android:id="@+id/tx1"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        />
